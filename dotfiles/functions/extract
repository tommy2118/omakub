# Usage: extract <file>
# Description: Extracts various archived/compressed files, with macOS-specific support for .dmg files.
extract () {
    if [[ -f "$1" ]]; then
        case "$1" in
            *.tar.bz2)  tar -jxvf "$1"                        ;;
            *.tar.gz)   tar -zxvf "$1"                        ;;
            *.bz2)      bunzip2 "$1"                          ;;
            *.gz)       gunzip "$1"                           ;;
            *.tar)      tar -xvf "$1"                         ;;
            *.tbz2)     tar -jxvf "$1"                        ;;
            *.tgz)      tar -zxvf "$1"                        ;;
            *.zip)      unzip "$1"                            ;;
            *.ZIP)      unzip "$1"                            ;;
            *.pax)      pax -r < "$1"                         ;;
            *.pax.Z)    uncompress "$1" --stdout | pax -r     ;;
            *.Z)        uncompress "$1"                       ;;
            *.dmg)
                if [[ "$OSTYPE" == "darwin"* ]]; then
                    hdiutil mount "$1"
                else
                    echo "Error: .dmg files are only supported on macOS."
                fi
                ;;
            *)          echo "Error: '$1' cannot be extracted/mounted via extract()" ;;
        esac
    else
        echo "Error: '$1' is not a valid file"
    fi
}
